<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <x:Double x:Key="ThemeDisabledOpacity">0.5</x:Double>
    
    <!-- Font sizes -->
    <x:Double x:Key="FontSizeSmall">13</x:Double>
    <x:Double x:Key="FontSizeNormal">14</x:Double>
    <x:Double x:Key="FontSizeLarge">15</x:Double>
    <FontFamily x:Key="FontFamily">Ubuntu</FontFamily>
    
    <!-- Specific control settings -->
    <x:Double x:Key="ScrollBarThickness">18</x:Double>
    <x:Double x:Key="ScrollBarThumbThickness">8</x:Double>

    <x:Double x:Key="IconElementThemeHeight">20</x:Double>
    <x:Double x:Key="IconElementThemeWidth">20</x:Double>
</ResourceDictionary>
